<h1>Recipe Book</h1>

<% if logged_in? %>
  <%= link_to "Create a new recipe", new_recipe_path %>
<% end %>

<% @recipes.each do |recipe| %>
  <div class="recipe">
    <%= image_tag recipe.image %>
    <h2><%= recipe.title %></h2>
    <p><%= recipe.description.truncate(100) %></p>
    <%= link_to "More...", recipe_path(recipe) %>
  </div>
<% end %>

<%= will_paginate @recipes %>
